{
  "manifest_version": 3,
  "name": "Pluck",
  "version": "1.0.0",
  "description": "Pluck UI components from any webpage and export them as standalone HTML with styles.",
  "permissions": ["activeTab", "scripting", "webNavigation", "storage", "downloads"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ]
}
